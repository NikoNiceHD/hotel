<Page x:Class="hotel.Buchung_erstellen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buchung_erstellen">

    <Grid Background="White">
        <DatePicker x:Name="datepicker_start" HorizontalAlignment="Left" Margin="131,225,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datepicker_ende" HorizontalAlignment="Left" Margin="510,225,0,0" VerticalAlignment="Top"/>
        <Label Content="Startdatum" HorizontalAlignment="Left" Margin="131,194,0,0" VerticalAlignment="Top"/>
        <Label Content="Enddatum" HorizontalAlignment="Left" Margin="510,194,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textbox_kundenid" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Ausgewählte Kunden ID:" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Buchung erstellen" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Page>