<Page x:Class="hotel.Buchung_3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zimmer_auswahl">

    <Grid>
     
            <Grid Background="White">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                   
                    <TextBlock x:Name="kundenIDTextBlock" FontSize="20" TextAlignment="Center"/>
                    <TextBlock x:Name="startDatumTextBlock" FontSize="20" TextAlignment="Center"/>
                    <TextBlock x:Name="endDatumTextBlock" FontSize="20" TextAlignment="Center"/>

                <DataGrid x:Name="zimmerDataGrid" Width="600" Height="200" AutoGenerateColumns="True" 
                                SelectionMode="Extended" SelectionUnit="FullRow" 
                                SelectionChanged="ZimmerDataGrid_SelectionChanged" Margin="0,0,0,20"/>
                <Button Content="Zimmer auswählen" Width="200" Click="ZimmerAuswaehlen_Click"/>
                </StackPanel>
            </Grid>
        
    </Grid>
</Page>
