<Page x:Class="hotel.Buchung_3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d"
      Title="Buchung_3" Height="721" Width="849">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="108,0,0,0" Height="616">
            <!-- Anzeige der Kunden-ID, Startdatum und Enddatum -->
            <TextBlock x:Name="kundenIDTextBlock" FontSize="20" TextAlignment="Center" Margin="0,10,0,10"/>
            <TextBlock x:Name="startDatumTextBlock" FontSize="20" TextAlignment="Center" Margin="0,10,0,10"/>
            <TextBlock x:Name="endDatumTextBlock" FontSize="20" TextAlignment="Center" Margin="0,10,0,20"/>

            <!-- DataGrid für verfügbare Zimmer -->
            <DataGrid x:Name="zimmerDataGrid" Width="600" Height="180" AutoGenerateColumns="True" 
                      SelectionMode="Extended" SelectionUnit="FullRow" 
                      SelectionChanged="ZimmerDataGrid_SelectionChanged" Margin="0,0,0,20"/>

            <!-- ListView für verfügbare Leistungen -->
            <TextBlock Text="Optionale Leistungen:" FontSize="16" Margin="0,10,0,10"/>
            <ListView x:Name="leistungenListView" Width="600" Height="150">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <!-- Checkbox für die Auswahl der Leistung -->
                            <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,10,0"/>
                            <!-- Anzeige der Leistungsbeschreibung und des Preises -->
                            <TextBlock Text="{Binding LeistungName}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Preis, StringFormat='Preis: {0:C}'}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Button zum Auswählen der Zimmer und Leistungen -->
            <Button Content="Buchung erstellen" Width="200" HorizontalAlignment="Center" Margin="0,20,0,0" Click="ZimmerAuswaehlen_Click"/>
        </StackPanel>
    </Grid>
</Page>