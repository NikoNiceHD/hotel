<Page x:Class="hotel.Buchung_erstellen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buchung_erstellen"
      Background="#1a1c21">

    <Grid>
        
        <Border Width="10" Background="#1a1c21" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        
        <Border Width="10" Background="#1a1c21" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>

        <Grid Margin="10">
            
            <TextBlock x:Name="textbox_kundenid" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,0" 
                       Text="Ausgewählte Kunden ID:" 
                       FontSize="24"
                       Foreground="White"/>

            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="131,150,0,0" VerticalAlignment="Top">
                
                <Label Content="Startdatum" Foreground="White"/>
                
                <DatePicker x:Name="datepicker_start" 
                            Width="120"
                            Background="#272B2F"
                            Foreground="#2967FF"
                            BorderBrush="#2967FF"
                            BorderThickness="1"
                            Padding="5"
                            >
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#2967FF"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DatePickerTextBox">
                                        <Grid>
                                            <Grid.Resources>
                                                <SolidColorBrush x:Key="WatermarkBrush" Color="#FFAAAAAA"/>
                                            </Grid.Resources>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="WatermarkStates">
                                                    <VisualState x:Name="Unwatermarked"/>
                                                    <VisualState x:Name="Watermarked">
                                                        <Storyboard>
                                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="PART_Watermark"/>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <Border x:Name="Border" 
                                                    Background="Transparent" 
                                                    BorderBrush="Transparent" 
                                                    BorderThickness="0">
                                                <Grid>
                                                    <ContentControl x:Name="PART_Watermark" 
                                                                    Content="Startdatum auswählen" 
                                                        Foreground="#FFAAAAAA" 
                                                                    IsHitTestVisible="False" 
                                                                    Opacity="0"
                                                                    VerticalAlignment="Center"
                                                                    Margin="5,0,0,0"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="5,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>

           
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="510,150,0,0" VerticalAlignment="Top">
                
                <Label Content="Enddatum" Foreground="White"/>
                
                <DatePicker x:Name="datepicker_ende" 
                            Width="120"
                            Background="#272B2F"
                            Foreground="#2967FF"
                            BorderBrush="#2967FF"
                            BorderThickness="1"
                            Padding="5"
                            >
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#2967FF"/>
                            
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DatePickerTextBox">
                                        <Grid>
                                            <Grid.Resources>
                                                <SolidColorBrush x:Key="WatermarkBrush" Color="#FFAAAAAA"/>
                                            </Grid.Resources>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="WatermarkStates">
                                                    <VisualState x:Name="Unwatermarked"/>
                                                    <VisualState x:Name="Watermarked">
                                                        <Storyboard>
                                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="PART_Watermark"/>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                            <Border x:Name="Border" 
                                                    Background="Transparent" 
                                                    BorderBrush="Transparent" 
                                                    BorderThickness="0">
                                                <Grid>
                                                    <ContentControl x:Name="PART_Watermark" 
                                                                    Content="Enddatum auswählen"
                                                        Foreground="#FFAAAAAA" 
                                                                    IsHitTestVisible="False" 
                                                                    Opacity="0"
                                                                    VerticalAlignment="Center"
                                                                    Margin="5,0,0,0"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                  VerticalAlignment="Center"
                                                                  Margin="5,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>

            
            <Button Content="Buchung erstellen" 
                    HorizontalAlignment="Center" 
                    Margin="0,312,0,0" 
                    VerticalAlignment="Top" 
                    Click="Button_Click"
                    Height="40" 
                    Width="180">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#212020"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="#212020"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Page>