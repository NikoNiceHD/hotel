<Page x:Class="hotel.Buchung_1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buchung_1"
      Background="#1a1c21">

    <Grid>
        <!-- Linker Rand -->
        <Border Width="10" Background="#1a1c21" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>

        <!-- Rechter Rand -->
        <Border Width="10" Background="#1a1c21" HorizontalAlignment="Right" VerticalAlignment="Stretch"/>

        <Grid Margin="10">
            <!-- Button Buchung Erstellen -->
            <Button Content="Buchung Erstellen" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="120,264,0,0" 
                    Width="200" 
                    Height="40" 
                    Click="Button_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#212020"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="#212020"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Button Buchung Bearbeiten -->
            <Button Content="Buchung Bearbeiten" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="500,264,1,0" 
                    Width="200" 
                    Height="40" 
                    Click="Button_Click_1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#212020"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="#212020"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Frame für Buchungsinhalte -->
            <Frame x:Name="Buchung" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch" 
                   Margin="10,10,10,10"/>
        </Grid>
    </Grid>
</Page>
