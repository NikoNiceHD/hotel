<Page x:Class="hotel.Kunden_eintragen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kunden_eintragen"
      Background="#1a1c21">

    <Grid>
        
        <Border Width="10" 
                Background="#1a1c21" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Stretch" />

        
        <Border Width="10" 
                Background="#1a1c21" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Stretch" />

        <Grid Margin="10,10,10,10">
            
            <TextBox x:Name="textbox_vorname" 
                     HorizontalAlignment="Left" 
                     Margin="77,84,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="120"
                     Background="#272B2F"
                     Foreground="White"
                     BorderBrush="#2967FF"
                     BorderThickness="1"
                     Padding="5"/>

            <TextBox x:Name="textbox_ort" 
                     HorizontalAlignment="Left" 
                     Margin="231,156,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="120"
                     Background="#272B2F"
                     Foreground="White"
                     BorderBrush="#2967FF"
                     BorderThickness="1"
                     Padding="5"/>

            <TextBox x:Name="textbox_plz" 
                     MaxLength="5" 
                     HorizontalAlignment="Left" 
                     Margin="77,157,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="120"
                     Background="#272B2F"
                     Foreground="White"
                     BorderBrush="#2967FF"
                     BorderThickness="1"
                     Padding="5"/>

            <TextBox x:Name="textbox_strasse_hausnummer" 
                     HorizontalAlignment="Left" 
                     Margin="400,156,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="120"
                     Background="#272B2F"
                     Foreground="White"
                     BorderBrush="#2967FF"
                     BorderThickness="1"
                     Padding="5"/>

            <TextBox x:Name="textbox_nachname" 
                     HorizontalAlignment="Left" 
                     Margin="231,84,0,0" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Top" 
                     Width="120"
                     Background="#272B2F"
                     Foreground="White"
                     BorderBrush="#2967FF"
                     BorderThickness="1"
                     Padding="5"/>

            
            <DatePicker x:Name="datepicker_geburtstag" 
            HorizontalAlignment="Left" 
            Margin="390,79,0,0" 
            VerticalAlignment="Top"
            Width="120"
            Foreground="#2967FF"
            Background="#272B2F"
            BorderBrush="#2967FF"
            >
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#2967FF"/>
                        
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DatePickerTextBox">
                                    <Grid>
                                        <Grid.Resources>
                                            <SolidColorBrush x:Key="WatermarkBrush" Color="#FFAAAAAA"/>
                                        </Grid.Resources>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="WatermarkStates">
                                                <VisualState x:Name="Unwatermarked"/>
                                                <VisualState x:Name="Watermarked">
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="PART_Watermark"/>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Border x:Name="Border" 
                                    Background="Transparent" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0">
                                            <Grid>
                                                <ContentControl x:Name="PART_Watermark" 
                                                    Content="Geburtsdatum" 
                                                    Foreground="#FFAAAAAA" 
                                                    IsHitTestVisible="False" 
                                                    Opacity="0"
                                                    VerticalAlignment="Center"
                                                    Margin="5,0,0,0"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                  VerticalAlignment="Center"
                                                  Margin="5,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

            
            <DatePicker x:Name="datepicker_einzugsdatum" 
            HorizontalAlignment="Left" 
            Margin="216,238,0,0" 
            VerticalAlignment="Top"
            Width="120"
            Foreground="#2967FF"
            Background="#272B2F"
            BorderBrush="#2967FF"
            >
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#2967FF"/>
                       
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DatePickerTextBox">
                                    <Grid>
                                        <Grid.Resources>
                                            <SolidColorBrush x:Key="WatermarkBrush" Color="#FFAAAAAA"/>
                                        </Grid.Resources>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="WatermarkStates">
                                                <VisualState x:Name="Unwatermarked"/>
                                                <VisualState x:Name="Watermarked">
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="PART_Watermark"/>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Border x:Name="Border" 
                                    Background="Transparent" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0">
                                            <Grid>
                                                <ContentControl x:Name="PART_Watermark" 
                                                    Content="Einzugsdatum" 
                                                    Foreground="#FFAAAAAA" 
                                                    IsHitTestVisible="False" 
                                                    Opacity="0"
                                                    VerticalAlignment="Center"
                                                    Margin="5,0,0,0"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                  VerticalAlignment="Center"
                                                  Margin="5,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            
            <Label Content="Vorname" 
                   HorizontalAlignment="Left" 
                   Margin="77,53,0,0" 
                   VerticalAlignment="Top"
                   Foreground="White"/>

            <Label Content="Nachname" 
                   HorizontalAlignment="Left" 
                   Margin="231,53,0,0" 
                   VerticalAlignment="Top"
                   Foreground="White"/>

            <Label Content="PLZ" 
                   HorizontalAlignment="Left" 
                   Margin="77,126,0,0" 
                   VerticalAlignment="Top"
                   Foreground="White"/>

            <Label Content="Ort" 
                   HorizontalAlignment="Left" 
                   Margin="231,126,0,0" 
                   VerticalAlignment="Top"
                   Foreground="White"/>

            <Label Content="Straße und Hausnummer" 
                   HorizontalAlignment="Left" 
                   Margin="400,126,0,0" 
                   VerticalAlignment="Top"
                   Foreground="White"/>

            <Label Content="Einzugsdatum" 
                   HorizontalAlignment="Left" 
                   Margin="231,207,0,0" 
                   VerticalAlignment="Top" 
                   Width="89"
                   Foreground="White"/>

            <Label Content="Geburtsdatum" 
                   HorizontalAlignment="Left" 
                   Margin="400,53,0,0" 
                   VerticalAlignment="Top"
                   Foreground="White"/>

           
            <Button Content="Eintragen" 
                    HorizontalAlignment="Left" 
                    Margin="271,318,0,0" 
                    VerticalAlignment="Top" 
                    Click="Button_Click" Height="25" Width="80">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#212020"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="#212020"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Page>