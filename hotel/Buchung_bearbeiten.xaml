<Page x:Class="hotel.Buchung_bearbeiten"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buchung_bearbeiten"
      Background="#1a1c21">

    <Grid>
       
        <Border Width="10" 
                Background="#1a1c21" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Stretch" />

       
        <Border Width="10" 
                Background="#1a1c21" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Stretch" />

        <Grid Margin="10,10,10,10">
           
            <Grid Margin="10,10,10,0" VerticalAlignment="Top">
                <TextBox x:Name="sucheTextBox" 
                         Height="30" 
                         TextChanged="SucheTextBox_TextChanged"
                         Background="#272B2F"
                         Foreground="White"
                         BorderBrush="#2967FF"
                         BorderThickness="1"
                         Padding="5">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="CaretBrush" Value="White"/>
                            <Setter Property="SelectionBrush" Value="#2967FF"/>
                            <Setter Property="SelectionTextBrush" Value="White"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>

              
                <TextBlock IsHitTestVisible="False" 
                           Text="Suche nach Buchungen..." 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left" 
                           Margin="10,0,0,0" 
                           Foreground="DarkGray">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=sucheTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

          
            <DataGrid x:Name="buchungenDataGrid" 
                      Margin="10,50,10,60" 
                      AutoGenerateColumns="True" 
                      SelectionMode="Single" 
                      SelectionUnit="FullRow" 
                      SelectionChanged="BuchungenDataGrid_SelectionChanged"
                      Background="#272B2F"
                      Foreground="White"
                      BorderBrush="#2967FF"
                      RowBackground="#1a1c21"
                      AlternatingRowBackground="#272B2F"
                      HeadersVisibility="Column"
                      IsReadOnly="True">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2967FF"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                          
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                           
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>

           
            <Button Content="Buchung bearbeiten" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,20" 
                    Width="150" 
                    Click="BearbeitenButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#212020"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2967FF"/>
                                <Setter Property="Foreground" Value="#212020"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Page>