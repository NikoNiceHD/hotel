<Page x:Class="hotel.Buchung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buchung">

    <Grid Background="White">
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" KeyDown="SearchTextBox"/>

        <DataGrid x:Name="dtgrid" Margin="0,54,0,181" ItemsSource="{Binding}" AutoGenerateColumns="True" MouseDoubleClick="DataGrid_MouseDoubleClick"/>
    </Grid>
</Page>