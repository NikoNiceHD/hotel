<Page x:Class="hotel.Kunden_bearbeiten"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kunden_bearbeiten">

    <Grid Background="White">
        <!-- Suchfeld -->
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" KeyDown="SearchTextBox"/>

        <!-- DataGrid zur Anzeige und Bearbeitung der Kundendaten -->
        <DataGrid x:Name="dtgrid" Margin="10,50,10,50" AutoGenerateColumns="True" ItemsSource="{Binding}" />

        <!-- Button zum Speichern der Änderungen -->
        <Button Content="Änderungen speichern" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="150" Click="SaveButton_Click"/>
    </Grid>
</Page>