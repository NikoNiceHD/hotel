<Page x:Class="hotel.Zimmer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2"
      Background="#1a1c21">

    <Grid>
        <!-- Button Zimmer eintragen -->
        <Button Content="Zimmer eintragen" 
                HorizontalAlignment="Left" 
                Margin="201,245,0,0" 
                VerticalAlignment="Top" 
                Click="Button_Click_1"
                Height="40"
                Width="140">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#212020"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5"> <!-- Moderater CornerRadius (5) -->
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2967FF"/>
                            <Setter Property="Foreground" Value="#212020"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Button Zimmer einsehen -->
        <Button Content="Zimmer einsehen" 
                HorizontalAlignment="Left" 
                Margin="556,245,0,0" 
                VerticalAlignment="Top" 
                Click="Button_Click"
                Height="40"
                Width="140">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#212020"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5"> <!-- Moderater CornerRadius (5) -->
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2967FF"/>
                            <Setter Property="Foreground" Value="#212020"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Frame für Zimmerinhalte -->
        <Frame x:Name="zimmer" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
