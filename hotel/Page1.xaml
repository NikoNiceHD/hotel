<Page x:Class="hotel.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <!-- TextBox für die Suche -->
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"  KeyDown="SearchTextBox_KeyDown"/>

        <!-- DataGrid zur Anzeige der Daten -->
        <DataGrid x:Name="dtgrid" Margin="0,54,0,181" ItemsSource="{Binding}" AutoGenerateColumns="True"/>

        <!-- Button für die ursprüngliche Funktion -->
        <Button Content="Daten laden" HorizontalAlignment="Left" Margin="360,304,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Page>