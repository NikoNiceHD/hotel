<Page x:Class="hotel.Zimmer_eintragen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zimmer_eintragen">

    <Grid Background="White">
        <TextBox x:Name="TextboxzimmerID" HorizontalAlignment="Left" Margin="37,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextboxgebaeudeID" HorizontalAlignment="Left" Margin="254,123,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Hinzufügen" HorizontalAlignment="Left" Margin="360,341,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Zimmer ID" HorizontalAlignment="Left" Margin="31,92,0,0" VerticalAlignment="Top"/>
        <Label Content="Gebäude ID" HorizontalAlignment="Left" Margin="254,92,0,0" VerticalAlignment="Top"/>
        <Label Content="eigenschaften (bei keinen eigenschaften leer lassen)" HorizontalAlignment="Left" Margin="37,194,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxDoppelzimmer" Content="Doppelzimmer" HorizontalAlignment="Left" Margin="37,225,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxSuite" Content="Suite" HorizontalAlignment="Left" Margin="155,225,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxHauptstrasse" Content="An der Hauptstraße" HorizontalAlignment="Left" Margin="255,225,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxKuehlschrank" Content="Kühlschrank" HorizontalAlignment="Left" Margin="37,264,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxTerasse" Content="Terasse" HorizontalAlignment="Left" Margin="155,264,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxGrosserBalkon" Content="Großer Balkon" HorizontalAlignment="Left" Margin="254,264,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxKleinerBalkon" Content="kleiner Balkon" HorizontalAlignment="Left" Margin="37,301,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
