<Page x:Class="hotel.Kunden"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <TextBox x:Name="textbox_vorname" HorizontalAlignment="Left" Margin="77,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textbox_ort" HorizontalAlignment="Left" Margin="231,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textbox_plz" MaxLength="5" HorizontalAlignment="Left" Margin="77,157,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textbox_strasse_hausnummer" HorizontalAlignment="Left" Margin="400,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textbox_nachname" HorizontalAlignment="Left" Margin="231,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="datepicker_geburtstag" HorizontalAlignment="Left" Margin="400,84,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datepicker_einzugsdatum" HorizontalAlignment="Left" Margin="231,238,0,0" VerticalAlignment="Top" Width="134"/>
        <Label Content="Vorname" HorizontalAlignment="Left" Margin="77,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Nachname" HorizontalAlignment="Left" Margin="231,53,0,0" VerticalAlignment="Top"/>
        <Label Content="PLZ" HorizontalAlignment="Left" Margin="77,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Ort" HorizontalAlignment="Left" Margin="231,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Straße und Hausnummer" HorizontalAlignment="Left" Margin="400,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Einzugsdatum" HorizontalAlignment="Left" Margin="231,207,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Geburtsdatum" HorizontalAlignment="Left" Margin="400,53,0,0" VerticalAlignment="Top"/>
        <Button Content="Eintragen" HorizontalAlignment="Left" Margin="271,318,0,0" VerticalAlignment="Top" Click="Button_Click"/>


    </Grid>
</Page>
