<Page x:Class="hotel.Buchung_bearbeiten_2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Buchung_Bearbeiten_Details">

    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Buchungsdetails -->
        <TextBlock x:Name="buchungDetailsTextBlock" FontSize="14" Margin="0,0,0,10" Grid.Row="0" />
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="leistungenStackPanel" />
        </ScrollViewer>

        <Button Content="Speichern" Click="SpeichernButton_Click" Grid.Row="2" HorizontalAlignment="Right" Width="100" />
    </Grid>
</Page>